// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Website {
  id       String    @id @default(uuid())
  domain   String    @unique
  sessions Session[]
}

model Session {
  id       String  @id @default(uuid())
  ip       String
  online   Boolean
  browser  String
  os       String
  device   String?
  country  String?
  referer  String?
  duration String?
  pages    Page[]
  wid      String
  website  Website @relation(fields: [wid], references: [id])

  @@unique(fields: [ip, browser, os], name: "newuser")
}

model Page {
  id       String    @id @default(uuid())
  pathname String    @unique
  views    Int
  viewers  Session[]
}
