// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Website {
  id String @id @default(uuid())

  domain String @unique

  sessions  Session[]
  viewDatas ViewData[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id      String  @id @default(uuid())
  ip      String
  country String?
  online  Boolean
  browser String
  os      String
  device  String

  website Website @relation(fields: [wid], references: [id])
  wid     String

  viewData ViewData[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique(fields: [ip, browser, os, device], name: "unique_user")
}

model ViewData {
  id String @id @default(uuid())

  viewer    Session @relation(fields: [sessionId], references: [id])
  sessionId String

  wid     String
  website Website @relation(fields: [wid], references: [id])

  pathname String
  duration Int
  count    Int
  referrer String?
  language String?
  screen   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
